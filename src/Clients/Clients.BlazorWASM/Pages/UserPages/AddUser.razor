@page "/add-user"

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Add User</h3>
            </div>
            <div class="card-body">
                <div class="col-md-12">
                    <EditForm Model="registerDTO" OnValidSubmit="CreateUser" FormName="RegisterForm">
                        <DataAnnotationsValidator />
                        <ValidationSummary />
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Nickname</label>
                                        <InputText for="Nickname" class="form-control" @bind-Value="@registerDTO.Nickname" />
                                        <ValidationMessage For="()=>registerDTO.Nickname" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Email</label>
                                        <InputText for="Email" class="form-control" @bind-Value="@registerDTO.Email" />
                                        <ValidationMessage For="()=>registerDTO.Email" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Tenant</label>
                                        <InputText for="Tenant" class="form-control" @bind-Value="@registerDTO.Tenant" />
                                        <ValidationMessage For="()=>registerDTO.Tenant" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Password</label>
                                        <InputText for="Password" class="form-control" @bind-Value="@registerDTO.Password" />
                                        <ValidationMessage For="()=>registerDTO.Password" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Confirm Password</label>
                                        <InputText for="ConfirmPassword" class="form-control" @bind-Value="@registerDTO.ConfirmPassword" />
                                        <ValidationMessage For="()=>registerDTO.ConfirmPassword" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group mt-4">
                                <button type="submit" class="btn btn-primary">Save</button>
                                <button type="button" @onclick="()=>Cancel()" class="btn btn-danger">Back to List</button>
                            </div>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromForm]
    public RegisterDTO registerDTO { get; set; } = new();

    protected async Task CreateUser()
    {
        var result = await _accountService.CreateAccount(registerDTO);
        _navigationManager.NavigateTo("/user-list");
    }

    public void Cancel()
    {
        _navigationManager.NavigateTo("/user-list");
    }

}
